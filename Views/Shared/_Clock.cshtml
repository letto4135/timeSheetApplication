<style>
    .btn-xl {
        margin-top: 3rem;
        padding: 1rem 2rem;
        font-size: 1.75rem;
        line-height: 1.25;
        border-radius: .3rem;
        width: 12rem;
    }
</style>

<div class="text-center">
    @using (Html.BeginForm("ClockInAsync", "Employee")){
        <button type="submit" class="btn btn-info btn-xl">Clock In</button>
    }
    <form asp-controller="Employee" method="POST">
        <button asp-action="ClockInAsync" type="submit" class="btn btn-info btn-xl">Clock In</button>
        <button asp-action="ClockOutAsync" type="submit" class="btn btn-secondary btn-xl" style="margin-left: 3rem;">Clock Out</button>
    </form>
</div>